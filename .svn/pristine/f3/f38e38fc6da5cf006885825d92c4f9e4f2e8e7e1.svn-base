		<!--判断限定号码为11位手机号码-->
		<script>
			$(function() {  
		        $("#mobilePhoneNumber").change(function() {  
		            var mobilePhoneNumber = $("#mobilePhoneNumber").val();  
		            mobilePhoneNumber = $.trim(mobilePhoneNumber);  
		            if (!/^1[3|4|5|7|8][0-9]\d{4,8}$/.test(mobilePhoneNumber)) {  
		                alert("您输入的手机号码不正确");  
		            } else {  
		                alert("确认号码 "+mobilePhoneNumber);  
		            }  
		        });  
		    });  
		</script>
